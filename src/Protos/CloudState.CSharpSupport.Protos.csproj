<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <RootNamespace>CloudState.CSharpSupport</RootNamespace>
    <!-- Waiting for grpc.tools to support 3.10 -->
    <!-- TODO: bootstrap the download of the right protoc -->
    <PROTOBUF_PROTOC>/Users/$(USER)/Applications/protoc</PROTOBUF_PROTOC>
  </PropertyGroup>

  <ItemGroup>
    <Protobuf Include="$(SolutionDir)/proto_files/protocols/**/*.proto" ProtoRoot="$(SolutionDir)/proto_files/protocols" OutputDir="proto_dist" CompileOutputs="false" GrpcServices="Both" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.Core" Version="2.23.1" />
    <PackageReference Include="Grpc.Tools" Version="2.23.1" />
    <!-- Waiting for 3.11.x -->
    <!-- <PackageReference Include="Google.Protobuf" Version="3.10.0" /> -->
    <!-- TODO: Submodule and ref master / patch branch -->
    <ProjectReference Include="$(SolutionDir)/protobuf/csharp/src/Google.Protobuf/Google.Protobuf.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="proto_dist" />
  </ItemGroup>
  
  <PropertyGroup>
   <Protobuf_TouchMissingExpected>true</Protobuf_TouchMissingExpected>
  </PropertyGroup>

</Project>
